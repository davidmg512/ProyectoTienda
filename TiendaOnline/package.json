        "documentation": "cross-env NODE_ENV=documentation node doc/generate-docs.js",
        "pm2": "cross-env NODE_ENV=production pm2 start index.js --name shopproject",
        "eslint": "eslint **/*.js",
        "eslint:fix": "eslint --fix **/*.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@mongodb-js/zstd": "^1.1.0",
        "body-parser": "^1.20.2",
        "config": "^3.3.9",
        "cors": "^2.8.5",
        "cross-env": "^7.0.0",
        "express": "^4.18.2",
        "firebase": "^8.6.8",
        "firebase-admin": "^11.10.1",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "kainda": "^7.2.0",
        "module-alias": "^2.2.2",
        "mongoose": "^7.0.3",
        "nodemon": "^3.0.1",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "^8.42.0",
